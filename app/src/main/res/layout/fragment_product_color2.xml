<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_color_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_color_minus_image"
        android:layout_gravity="right"
        android:layout_width="@dimen/round_minus_plus_size"
        android:layout_height="@dimen/round_minus_plus_size"
        android:src="@drawable/minus" />

    <EditText
        android:id="@+id/product_color_new_quantity"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/round_minus_plus_size"
        android:layout_marginLeft="@dimen/round_minus_plus_size"
        android:background="#00000000"
        android:inputType="number"
        android:text="0"
        android:maxLength="4"
        android:textColor="@color/colorAccent"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/product_color_plus_image"
        android:layout_gravity="right"
        android:layout_width="@dimen/round_minus_plus_size"
        android:layout_height="@dimen/round_minus_plus_size"
        android:layout_marginLeft="@dimen/round_minus_plus_size"
        android:layout_marginStart="@dimen/round_minus_plus_size"
        android:src="@drawable/plus" />


    </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/base_margin_half"
                android:background="@color/line_light_grey"/>
   <!-- </ScrollView>-->
</RelativeLayout>