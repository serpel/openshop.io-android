<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="4dp"
              android:weightSum="1">

    <TextView
        android:id="@+id/order_history_item_client_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="Sergio Peralta"/>

    <TextView
        android:id="@+id/order_history_item_sap_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="125364"/>

    <TextView
        android:id="@+id/order_history_item_dateCreated"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="2017/01/01"/>

   <!-- <TextView
        android:id="@+id/order_history_item_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="start"
        android:textSize="14sp"
        tools:text="99"/>-->

    <TextView
        android:id="@+id/order_history_item_totalPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:gravity="end"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="1580 USD"/>

</LinearLayout>