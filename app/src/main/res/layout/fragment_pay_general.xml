<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/document_client_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="C0261" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/document_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:textColor="@color/colorAccentDark"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="ABARROTERIA POPULAR" />

            <TextView
                android:id="@+id/document_document_credit_limit"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="FOLIO" />

            <EditText
                android:id="@+id/document_document_pay_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="F01100" />

            <TextView
                android:id="@+id/document_balance_text"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Balance"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="REFERENCIA" />

            <EditText
                android:id="@+id/document_orders_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/InOrder"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="112302329" />

            <TextView
                android:id="@+id/document_balance"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="CONTACTO" />

            <EditText
                android:id="@+id/document_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="Sergio Peralta" />

            <TextView
                android:id="@+id/document_balance_2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="COMENTARIOS" />

            <EditText
                android:id="@+id/document_orders_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:text="Esto es una prueba" />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
