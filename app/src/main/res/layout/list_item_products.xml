<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/product_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <grintsys.com.vanshop.views.ResizableImageView
                android:id="@+id/product_item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_product_image"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/product_item_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="BO0002"/>

                <TextView
                    android:id="@+id/product_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:gravity="start"
                    android:paddingBottom="5dp"
                    android:maxLines="2"
                    android:textSize="14sp"
                    tools:text="Kotnickove ponozky s krajkou"/>

                <TextView
                    android:id="@+id/product_item_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:paddingBottom="5dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    tools:text="Van Heusen"/>

                <TextView
                    android:id="@+id/product_item_season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:paddingBottom="5dp"
                    android:maxLines="2"
                    android:textSize="16sp"
                    tools:text="Season T6"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/product_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_lighter_grey"
        android:visibility="visible"
        tools:visibility="visible"/>
</LinearLayout>